<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="@dimen/padding_20"    tools:context=".AddQuizActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_10"
                android:text="@string/tv_update_quiz_title"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_34"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_10">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_teacher_email" />

                <TextView
                    android:id="@+id/tvUpdateTeacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="text"
                    android:text="@string/tv_tmp_email"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_subject_name" />

                <EditText
                    android:id="@+id/edtUpdateSubjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_subject_name"
                    android:inputType="text"
                    android:minHeight="@dimen/height_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_quiz_name" />

                <EditText
                    android:id="@+id/edtUpdateQuizName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_quiz_name"
                    android:inputType="text"
                    android:minHeight="@dimen/height_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_quiz_time" />

                <EditText
                    android:id="@+id/edtUpdateQuizTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_quiz_time"
                    android:inputType="number"
                    android:minHeight="@dimen/height_50" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Change Password "
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_old_password" />

                <EditText
                    android:id="@+id/edtOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_quiz_old_password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/height_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_new_password" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_enter_quiz_new_password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/height_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_width_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tv_confirm_new_password" />

                <EditText
                    android:id="@+id/edtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_confirm_new_password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/height_50" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:text="@string/tv_list_of_question" />

            <ListView
                android:id="@+id/lvUpdateQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true">
            </ListView>

            <Button
                android:id="@+id/btnAddMoreQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_more_question" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_10">

                <Button
                    android:id="@+id/btnUpdateQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_weight="1"
                    android:text="@string/btn_update" />

                <Button
                    android:id="@+id/btnCancelUpdateQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_weight="1"
                    android:text="@string/btn_cancel" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
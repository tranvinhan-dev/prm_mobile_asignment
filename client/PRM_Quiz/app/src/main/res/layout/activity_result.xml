<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_40"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tvNoCorrect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tall"
        android:gravity="center"
        android:text="@string/tv_noCorrectAnswer"
        android:textSize="@dimen/textSize_34"/>
    <TextView
        android:id="@+id/tvQuizScore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tall"
        android:gravity="center"
        android:text="@string/tv_quizScore"
        android:textSize="@dimen/textSize_34"/>
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_finish_and_close"
        android:padding="@dimen/padding_10"/>
</LinearLayout>